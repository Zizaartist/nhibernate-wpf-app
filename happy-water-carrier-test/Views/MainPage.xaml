<Page x:Class="happy_water_carrier_test.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:happy_water_carrier_test.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="EmployeeButton" Content="Сотрудники" HorizontalAlignment="Center" VerticalAlignment="Center" Width="192" Click="EmployeeButton_Click"/>
        <Button x:Name="SubdivisionButton" Content="Подразделения" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="192" Click="SubdivisionButton_Click"/>
        <Button x:Name="OrderButton" Content="Заказы" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="192" Click="OrderButton_Click"/>
    </Grid>
</Page>
